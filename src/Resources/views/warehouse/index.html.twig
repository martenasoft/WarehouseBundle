{% extends 'base.html.twig' %}

{% block title %}Warehouse index{% endblock %}

{% block body %}
    <h1>Warehouse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for warehouse in warehouses %}
            <tr>
                <td>{{ warehouse.id }}</td>
                <td>{{ warehouse.name }}</td>
                <td>{{ warehouse.description }}</td>
                <td>
                    <a href="{{ path('warehouse_show', {'id': warehouse.id}) }}">show</a>
                    <a href="{{ path('warehouse_edit', {'id': warehouse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('warehouse_new') }}">Create new</a>
{% endblock %}
